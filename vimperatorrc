""""""""""""""""
"""" Config """"
""""""""""""""""
""" set mapleader
let mapleader=","
""" vertical bar CANNOT be used here
set urlseparator=;
""" define runtimepath
set runtimepath=~/myvimperator,~/.vimperator
" List of directories searched for runtime files:
" colors/
" macros/
" plugin/

""""""""""""""""""""""
"""" Keybindings """""
""""""""""""""""""""""
" Vimium key binding for Vimperator
" https://github.com/kunal-/.vimperatorrc/blob/master/.vimperatorrc
" map J gT
" map K gt
" "down
" map d <C-d>
" "up
" map u <C-u>
" map H <C-o>
" map L <C-i>
" noremap x d
" noremap X u
noremap j 2j
noremap k 2k

""" Display
"""" show only the tab bar
set gui=tabs
"""" show numbers on each tab
set tabnumbers
"""" see http://code.google.com/p/vimperator-labs/issues/detail?id=311
set popups=tab,resized
set focuscontent
"""" output all ExCommand results in a new tab
set newtab=all

""" Find
"""" perform incremental searching
set incsearch
"""" highlight search results
set hlsearch
"""" typically (see below) ignore case
set ignorecase
"""" only consider case if an upper case char is used
set smartcase

""" Other
set complete=slfbh
set "editor=mintty -e vim"
set errorbells
set noscrollbars
set "titlestring=Pale Moon"
set hintchars=sadfjklewcmpgh

""" Tabs
"""" Groups
inoremap <Leader>tg <Esc>:tabgroups<Space>
cnoremap <Leader>tg :tabgroups<Space>
noremap <Leader>tg :tabgroups<Space>
"""" Add
inoremap <Leader>ta <Esc>:tabgroups add<Space>
cnoremap <Leader>ta :tabgroups add<Space>
noremap <Leader>ta :tabgroups add<Space>
"""" Switch
inoremap <Leader>ts <Esc>:tabgroups switch<Space>
cnoremap <Leader>ts :tabgroups switch<Space>
noremap <Leader>ts :tabgroups switch<Space>
"""" List
inoremap <Leader>tl <Esc>:tabgroups list<Return>
cnoremap <Leader>tl :tabgroups list<Return>
noremap <Leader>tl :tabgroups list<Return>

"""" open in background, tabclose, tabmove
map <A-f> ;b
map <A-d> :tabclose<Space>-select=lastactive<Return>
map J :tabnext<Return>
map K :tabprevious<Return>

""" Downloads
noremap <C-j> :downloads<CR>
inoremap <C-j> <Esc>:downloads<CR>
cnoremap <C-j> :downloads<CR>

""" Insert Mode
imap <C-t> <Esc><C-t>
imap <C-w> <Esc><C-w>
""" Command Mode
cmap <C-k> <Esc><C-k>
cmap <C-l> <Esc><C-l>
" cmap <C-t> <Esc><C-t>

""" Deactivate FF genuine keybinds
inoremap <C-a> <Insert><C-a><Insert>
noremap <C-S-T> <Nop>
" noremap <C-t> <Nop>
noremap <C-w> <Nop>
noremap <C-Tab> <Nop>
noremap <C-S-Tab> <Nop>
noremap <BS> <Nop>
noremap <F5> <Nop>
noremap <C-o> <Nop>
noremap <C-i> <Nop>

