" vim:fdm=marker
" Colorscheme"{{{

let g:solarized_termcolors=256

" Nice CSs are: impact, sorcerer, herald, solarized
colors default
colorscheme default

" set background=dark
set background=light

" Colorscheme"}}}
" Highlighting"{{{

" Set Cursor"{{{

" http://stackoverflow.com/a/7619174
" http://vim.1045645.n5.nabble.com/Cursor-line-and-cursor-column-highlighting-tc1843171.html#none
if &bg == 'dark' 
    hi  CursorColumn ctermbg=Yellow ctermfg=None
else 
    hi  CursorColumn ctermbg=Black ctermfg=None
endif 
"hi clear CursorColumn
"hi! link CursorColumn CursorLine 

" Set Cursor"}}}
" Customized"{{{

" Text
" autocmd ColorScheme * highlight Normal  ctermbg=None
" autocmd ColorScheme * highlight NonText ctermbg=None
autocmd ColorScheme * highlight ColorColumn               ctermbg=magenta ctermfg=none cterm=none

" Customized"}}}
" VimDiff"{{{

autocmd ColorScheme * highlight DiffAdd                   ctermbg=154 ctermfg=none cterm=none
autocmd ColorScheme * highlight DiffDelete                ctermbg=165 ctermfg=none cterm=none
autocmd ColorScheme * highlight DiffText                  ctermbg=250 ctermfg=none cterm=none
autocmd ColorScheme * highlight DiffChange                ctermbg=252 ctermfg=none cterm=none

" VimDiff"}}}
" Search & Spellcheck"{{{

autocmd ColorScheme * highlight Search                    ctermbg=255 ctermfg=none cterm=none
autocmd ColorScheme * highlight IncSearch                 ctermbg=192 ctermfg=none cterm=none
autocmd ColorScheme * highlight SpellBad                  ctermbg=25 ctermfg=none cterm=none
autocmd ColorScheme * highlight SpellCap                  ctermbg=25 ctermfg=none cterm=none
autocmd ColorScheme * highlight SpellLocal                ctermbg=25 ctermfg=none cterm=none
autocmd ColorScheme * highlight SpellRare                 ctermbg=25 ctermfg=none cterm=none
autocmd ColorScheme * highlight LanguageToolGrammarError  ctermbg=53 ctermfg=none cterm=none
autocmd ColorScheme * highlight LanguageToolCmd           ctermbg=53 ctermfg=none cterm=none
autocmd ColorScheme * highlight LanguageToolLabel         ctermbg=53 ctermfg=none cterm=none
autocmd ColorScheme * highlight LanguageToolErrorCount    ctermbg=53 ctermfg=none cterm=none
autocmd ColorScheme * highlight LanguageToolSpellingError ctermbg=55 ctermfg=none cterm=none

" Search & Spellcheck"}}}
